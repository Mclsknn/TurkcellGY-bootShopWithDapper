@model IEnumerable<Product>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a class="btn btn-success" href="/Products/Create">Yeni Ürün Ekle</a>
</p>

    <table class="table table-bordered">
        <thead style="text-align:center" >
        <th>Name</th>
        <th>Price</th>
        <th>Discount</th>
        <th>Description</th>
        <th>Category Name</th>
        <th >Image </th>
        <th style="width:20%"></th>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Discount</td>
                    <td>@item.Description</td>
                    <td>@item.Category.Name</td>
                    <td>
                        <img src="@item.ImageUrl" class="img-thumbnail">
                    </td>
                    <td>
                        <a class="btn btn-info" href="/Products/Edit/@item.Id">Düzenle</a>
                        <a class="btn btn-warning" href="/Products/Delete/@item.Id">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
