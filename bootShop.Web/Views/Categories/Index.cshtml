@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<p>
        <a class="btn btn-success ml-3" href="/Categories/Create">Yeni Kategori Ekle</a>
</p>
<div class="container">
    <table class="table table-bordered" >
        <thead>
            <th style="width:10%">ID</th>
            <th style="width:40%">Name</th>
            <th style="width:20%"></th>
        </thead>
        <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    <a class="btn btn-info" href="/Categories/Update/@item.Id">Düzenle</a>
                    <a class="btn btn-warning" href="/Categories/Delete/@item.Id">Sil</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
